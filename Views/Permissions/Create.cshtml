@model ProManagementSystem.Models.Entities.Permission

@{
    ViewData["Title"] = "Create Permission";
}

<h1>Create Permission</h1>

<div class="card">
    <div class="card-body">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="alert alert-danger"></div>
            
            <div class="form-group">
                <label asp-for="Name" class="control-label"></label>
                <input asp-for="Name" class="form-control" placeholder="e.g., View Users, Create Reports" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            
            <div class="form-group">
                <label asp-for="Description" class="control-label"></label>
                <textarea asp-for="Description" class="form-control" rows="3" placeholder="Describe what this permission allows..."></textarea>
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>
            
            <div class="form-group">
                <label asp-for="SubModuleId" class="control-label">Sub Module</label>
                <select asp-for="SubModuleId" class="form-control" asp-items="ViewBag.SubModuleId">
                    <option value="">Select a Sub Module</option>
                </select>
                <span asp-validation-for="SubModuleId" class="text-danger"></span>
            </div>
            
            <div class="form-check">
                <input type="checkbox" asp-for="IsActive" class="form-check-input" checked />
                <label asp-for="IsActive" class="form-check-label"></label>
            </div>
            
            <div class="form-group mt-3">
                <input type="submit" value="Create" class="btn btn-primary" />
                <a asp-action="Index" class="btn btn-secondary">Back to List</a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
    <script>
        // Load sub-modules on page load
        $(document).ready(function() {
            loadSubModules();
        });
        
        function loadSubModules() {
            $.get('/api/submodules', function(data) {
                var select = $('#subModuleSelect');
                select.empty();
                select.append('<option value="">Select a Sub Module</option>');
                
                $.each(data, function(index, item) {
                    select.append('<option value="' + item.id + '">' + item.moduleName + ' - ' + item.name + '</option>');
                });
            }).fail(function() {
                // Fallback: Add some default options
                var select = $('#subModuleSelect');
                select.append('<option value="1">User Management - Users</option>');
                select.append('<option value="2">User Management - Roles</option>');
                select.append('<option value="3">User Management - Permissions</option>');
                select.append('<option value="4">Module Management - Modules</option>');
                select.append('<option value="5">Module Management - Sub Modules</option>');
            });
        }
    </script>
}
